        <!--android:layout_toEndOf="@id/referral_details_label"-->
        <!--android:layout_marginStart="10dp"-->
        <!--android:layout_alignTop="@id/referral_details_label" />-->

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
