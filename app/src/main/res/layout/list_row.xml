<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_gravity="start"
        app:layout_heightPercent="90%"
        app:layout_aspectRatio="100%"
        app:layout_marginStartPercent="5%"
        android:id="@+id/communityImage"
        android:contentDescription="@string/community_image_description" />

    <TextView
        android:layout_width="wrap_content"
        app:layout_heightPercent="40%"
        app:layout_marginStartPercent="4%"
        app:layout_marginEndPercent="5%"
        android:id="@+id/communityName"
        android:layout_toEndOf="@id/communityImage"
        android:layout_alignTop="@id/communityImage"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        app:layout_heightPercent="40%"
        android:id="@+id/patientCount"
        android:layout_alignStart="@id/communityName"
        android:layout_below="@id/communityName"
        app:layout_marginEndPercent="5%"
        app:layout_marginTopPercent="5%" />

</android.support.percent.PercentRelativeLayout>

