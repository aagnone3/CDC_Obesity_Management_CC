<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.gatech.johndoe.carecoordinator.MainActivity">
    <item
        android:id="@+id/action_settings"
        android:orderInCategory="100"
        android:title="@string/action_settings"
        app:showAsAction="never" />

    <item
        android:id="@+id/search"
        android:title="@string/search_title"
        android:icon="@android:drawable/ic_menu_search"
        app:showAsAction="collapseActionView|ifRoom"
        app:actionViewClass="android.widget.SearchView"
        android:visible="false" />

    <item
        android:id="@+id/refresh"
        android:title="@string/refresh"
        android:icon="@drawable/ic_menu_refresh"
        app:showAsAction="collapseActionView|ifRoom"
        android:visible="true"/>

    <item
        android:id="@+id/sort"
        android:title="@string/sort_title"
        android:icon="@android:drawable/ic_menu_sort_by_size"
        app:showAsAction="collapseActionView|ifRoom"
        android:visible="true">
        <menu>
            <item
                android:id="@+id/menuSortName"
                android:title="@string/sort_menu_name" />
            <item
                android:id="@+id/menuSortPopularity"
                android:title="@string/sort_menu_popularity" />
            <item
                android:id="@+id/menuSortDistance"
                android:title="@string/sort_menu_distance" />
